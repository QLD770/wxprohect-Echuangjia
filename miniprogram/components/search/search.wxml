<!--components/search/search.wxml-->
<view class="{{ isFocus ? 'containerFocus' : 'container' }}">
  <view class="search">
    <view class="search-text">
      <text class="iconfont icon-chaxun"></text>
      <input type="text" placeholder="搜索您想去的地方" bindfocus="handleFocus" bindconfirm="handleConfirm" confirm-type="search" />
    </view>
    <view wx:if="{{ isFocus }}" class="search-cancel" bindtap="handleCancel">取消</view>
  </view>
</view>
